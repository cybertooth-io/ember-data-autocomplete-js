<DocsDemo as |demo|>
  {{#demo.example name="debug-options-template"}}
    <Autocomplete
      autofocus="true"
      class="docs-shadow docs-appearance-none docs-border docs-rounded docs-w-full docs-py-2 docs-px-3 docs-text-gray-700 docs-leading-tight focus:docs-outline-none focus:docs-shadow-outline"
      placeholder="View Source Of Rendered Options - Begin Typing"
      type="search"
      @displayKey="fullName"
      @filter="by_name_search"
      @globalOptions={{hash debug=true}}
      @modelName="user"
      @selected={{this.chooseUser}}
    />
  {{/demo.example}}

  {{demo.snippet "debug-options-template" label="template.hbs"}}
  {{demo.snippet "basic-controller" label="controller.js"}}
  {{demo.snippet "user.js" label="user.js"}}
</DocsDemo>
